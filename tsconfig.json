{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest",
      "./types/index.d.ts"
    ],
    "paths": {
      "@src/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "./*.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/@types",
    "./types/index.d.ts"
  ],
}
